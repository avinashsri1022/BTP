<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us !"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:layout_margin="16dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e1e1e1">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Fill in your details."
        android:textSize="20sp"
        android:layout_margin="16dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:text="Name"
            android:gravity="center"
            android:textSize="16sp"
            android:textAllCaps="true"/>

        <EditText
            android:id="@+id/namebox"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:ellipsize="start"
            android:gravity="center"
            android:inputType="text"
            android:background="@drawable/edit_text_style"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:text="Query/Suggestion"
            android:gravity="center"
            android:textSize="16sp"
            android:textAllCaps="true"/>

        <EditText
            android:id="@+id/querybox"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:lines="5"
            android:ellipsize="start"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:background="@drawable/edit_text_style"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:text="Phone"
            android:gravity="center"
            android:textSize="16sp"
            android:textAllCaps="true"/>

        <EditText
            android:id="@+id/phonebox"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:ellipsize="start"
            android:gravity="center"
            android:inputType="number"
            android:background="@drawable/edit_text_style"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e1e1e1">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You can directly reach us at customercare@trio.com"
        android:textSize="16sp"
        android:lines="2"
        android:textColor="#4A148C"
        android:layout_margin="16dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or call us at our Tollfree no. 1800-0000-9999"
        android:textSize="16sp"
        android:lines="2"
        android:textColor="#4A148C"
        android:layout_margin="16dp" />
    <Button
        android:id="@+id/btnquery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f98611"
        android:clickable="true"
        android:text="Send Query"
        android:textAllCaps="true"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>